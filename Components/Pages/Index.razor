@page "/"

<PageTitle>VitalsCloud - Your Health, Our Priority</PageTitle>

<link href="~/css/custom.css" rel="stylesheet" />

<!-- Hero Section -->
<div class="hero-section fade-in">
    <div class="container-fluid">
        <div class="hero-content">
            <h1 class="hero-title">Your Health, Our Priority</h1>
            <p class="hero-subtitle">Experience compassionate, comprehensive healthcare at VitalsCloud. Our modern facility and dedicated team are here to provide exceptional medical care for you and your family.</p>
            <div class="hero-buttons">
                <a href="appointments" class="btn-primary-hero">Book Consultation</a>
                <a href="#about" class="btn-outline-hero">Learn More</a>
            </div>
        </div>
    </div>
</div>

<!-- Services Section -->
<section id="services" class="services-section slide-in-left">
    <div class="container-fluid">
        <h2 class="section-title">Our Medical Services</h2>
        <p class="section-subtitle">Comprehensive healthcare services tailored to meet your family's medical needs with compassion and expertise.</p>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="bi bi-heart-pulse"></i>
                    </div>
                    <h3 class="service-title">General Medicine</h3>
                    <p class="service-description">Comprehensive primary healthcare services for adults including preventive care, diagnosis, and treatment of common illnesses with personalized attention.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="bi bi-emoji-smile"></i>
                    </div>
                    <h3 class="service-title">Pediatrics</h3>
                    <p class="service-description">Specialized medical care for infants, children, and adolescents focusing on their unique health needs, development, and family-centered care.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="bi bi-lightning-charge"></i>
                    </div>
                    <h3 class="service-title">Emergency Care</h3>
                    <p class="service-description">Immediate medical attention for urgent health conditions and medical emergencies when you need prompt, professional care.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="about-section slide-in-right">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h2 class="section-title text-start">About <span class="text-gradient">VitalsCloud</span></h2>
                <p class="lead mb-4">VitalsCloud is a modern healthcare clinic dedicated to providing exceptional medical care to our community. Our state-of-the-art facility combines cutting-edge technology with compassionate care, ensuring every patient receives the attention they deserve.</p>
                <p class="mb-4">Our user-friendly website makes it easy for you to book appointments online, manage your healthcare needs, and access quality medical services. Experience the future of healthcare with our comprehensive digital platform and personalized care approach.</p>
                <div class="d-flex gap-3 mb-4">
                    <a href="appointments" class="btn-cta">Schedule Appointment</a>
                    <a href="#team" class="btn btn-outline-primary">Meet Our Team</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-sm-6">
                        <div class="stats-card">
                            <span class="stats-number">2</span>
                            <span class="stats-label">Months Experience</span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="stats-card">
                            <span class="stats-number">3</span>
                            <span class="stats-label">Specialized Services</span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="stats-card">
                            <span class="stats-number">24/7</span>
                            <span class="stats-label">Online Booking</span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="stats-card">
                            <span class="stats-number">100%</span>
                            <span class="stats-label">Patient Focused</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Team Section -->
<section id="team" class="team-section fade-in">
    <div class="container-fluid">
        <h2 class="section-title">Meet Our <span class="text-gradient">Medical Team</span></h2>
        <p class="section-subtitle">Our dedicated healthcare professionals are committed to providing exceptional care with expertise and compassion.</p>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="doctor-card">
                    <div class="doctor-avatar">
                        <i class="bi bi-person"></i>
                    </div>
                    <h3 class="doctor-name">Dr. Sarah Johnson</h3>
                    <p class="doctor-specialty">General Medicine</p>
                    <p class="doctor-description">Specialized in preventive care and chronic disease management. Dr. Johnson provides comprehensive family medicine with a focus on patient education and wellness.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="doctor-card">
                    <div class="doctor-avatar">
                        <i class="bi bi-person"></i>
                    </div>
                    <h3 class="doctor-name">Dr. Michael Chen</h3>
                    <p class="doctor-specialty">Pediatrics</p>
                    <p class="doctor-description">Dedicated pediatrician focusing on child health and development. Dr. Chen provides comprehensive care for young patients with a gentle, family-centered approach.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="doctor-card">
                    <div class="doctor-avatar">
                        <i class="bi bi-person"></i>
                    </div>
                    <h3 class="doctor-name">Dr. Emily Rodriguez</h3>
                    <p class="doctor-specialty">Emergency Medicine</p>
                    <p class="doctor-description">Emergency medicine specialist available for urgent care. Dr. Rodriguez provides immediate attention for critical medical situations requiring prompt professional care.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="contact-section slide-in-left">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="section-title text-start">Contact <span class="text-gradient">VitalsCloud</span></h2>
                <p class="mb-4">Ready to take charge of your health? Get in touch with us today to schedule your appointment or learn more about our services.</p>
                
                <div class="form-modern">
                    <h4 class="mb-3">Send us a Message</h4>
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <input type="text" class="form-control-modern" placeholder="Your Name">
                            </div>
                            <div class="col-md-6">
                                <input type="email" class="form-control-modern" placeholder="Your Email">
                            </div>
                            <div class="col-12">
                                <input type="text" class="form-control-modern" placeholder="Subject">
                            </div>
                            <div class="col-12">
                                <textarea class="form-control-modern" rows="4" placeholder="Your Message"></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn-cta">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-sm-6">
                        <div class="contact-card">
                            <div class="contact-icon">
                                <i class="bi bi-telephone"></i>
                            </div>
                            <h5>Phone</h5>
                            <p>Available during business hours for appointments and inquiries</p>
                            <strong>+1 (555) 123-4567</strong>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="contact-card">
                            <div class="contact-icon">
                                <i class="bi bi-geo-alt"></i>
                            </div>
                            <h5>Location</h5>
                            <p>Visit us at our modern healthcare facility</p>
                            <strong>123 Health Plaza<br>Medical District</strong>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="contact-card">
                            <div class="contact-icon">
                                <i class="bi bi-clock"></i>
                            </div>
                            <h5>Hours</h5>
                            <p><strong>Monday - Friday:</strong> 9AM - 6PM<br>
                            <strong>Saturday:</strong> 9AM - 2PM<br>
                            <strong>Sunday:</strong> Closed</p>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="contact-card">
                            <div class="contact-icon">
                                <i class="bi bi-envelope"></i>
                            </div>
                            <h5>Email</h5>
                            <p>Send us your questions or concerns</p>
                            <strong>info@vitalscloud.com</strong>
                        </div>
                    </div>
                </div>
                
                <div class="emergency-highlight">
                    <h4><i class="bi bi-lightning-charge me-2"></i>Emergency Services</h4>
                    <p>For immediate medical emergencies, please call 911 or visit your nearest emergency room. For urgent but non-emergency care, contact us during business hours.</p>
                </div>
            </div>
        </div>
    </div>
</section>

